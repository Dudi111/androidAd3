<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2F2F"
    android:backgroundTint="#2F2F2F">

    <TextView
        android:id="@+id/tvhello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello AND 03"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_margin="30dp"/>
    <TextView
        android:id="@+id/tvwelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvhello"
        android:text="Welcome to Layouts"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:gravity="center" />
    <TextView
        android:id="@+id/tvnext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="#00FF00"
        android:padding="20dp"/>
    <View
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:id="@+id/vblank"
        android:layout_above="@+id/tvnext"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="80dp"
        android:background="#C4C4C4"/>
    <View
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:id="@+id/vblank1"
        android:layout_above="@+id/vblank"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="55dp"
        android:background="#C4C4C4"/>
    <View
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:id="@+id/vblank2"
        android:layout_above="@+id/vblank1"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="35dp"
        android:background="#C4C4C4"/>
    <View
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:id="@+id/vcircle"
        android:layout_below="@id/tvwelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/bluecircle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvname"
        android:text="NAME: Praveen"
        android:textColor="#FF0000"
        android:layout_below="@+id/vcircle"
        android:layout_marginTop="120dp"
        android:textSize="25sp"
        android:layout_marginStart="15dp"
        android:drawableEnd="@drawable/ic_name"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvage"
        android:text="Age: 25"
        android:layout_below="@+id/tvname"
        android:textColor="#FF0000"
        android:textSize="25sp"
        android:layout_marginStart="15dp"/>


    



</RelativeLayout>